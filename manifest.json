{
  "manifest_version": 3,
  "name": "Bionic Reading",
  "description": "Helps you read twice as fast and stay focused.",
  "version": "1.0",
  "icons": {
    "16": "images/icons8-reading-16.png",
    "48": "images/icons8-reading-50.png",
    "128": "images/icons8-reading-100.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
        "16": "images/icons8-reading-16.png",
        "48": "images/icons8-reading-50.png",
        "128": "images/icons8-reading-100.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+A",
        "mac": "Command+A"
      }
    }
  }
}